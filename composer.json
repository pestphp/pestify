{
    "name": "pestphp/pest-plugin-drift",
    "description": "The Pest Drift Plugin",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2.0",
        "nikic/php-parser": "^5.0.2",
        "pestphp/pest": "^2.34.4",
        "symfony/finder": "^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Drift\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^2.16.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refactor": "rector",
        "lint": "pint",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "pest": {
            "plugins": [
                "Pest\\Drift\\Plugin"
            ]
        }
    }
}
